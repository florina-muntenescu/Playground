<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <TextView
        android:id="@+id/view_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/text_size_small"
        tools:text="type" />

    <TextView
        android:id="@+id/view_tapped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_type"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        tools:text="none" />

    <TextView
        android:id="@+id/view_below"
        android:layout_width="match_parent"
        android:layout_height="@dimen/animating_view_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/view_below_selector"
        android:gravity="center"
        android:text="@string/tap_here"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/view_above"
        android:layout_width="match_parent"
        android:layout_height="@dimen/animating_view_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/view_above_selector"
        android:gravity="center"
        android:text="@string/tap_to_animate"
        android:textSize="@dimen/text_size_normal" />
</RelativeLayout>
